@model Dish

<div style="display:flex; justify-content:center; align-content:center;">
    <img src="@Model.ImageUrl" width="300" height="300" />
    </div>
    <div style="text-align:center">
        <h1>@Model.Name</h1>
        <h3>@Model.Description</h3>
        <h3>@Model.Price.ToString("c")</h3>
    <a class="btn btn-primary"asp-controller="Dish" asp-action="Delete" asp-route-id="@Model.DishId">Delete</a>
    <a class="btn btn-primary" asp-controller="Dish" asp-action="Update" asp-route-id="@Model.DishId">Update</a>
</div>