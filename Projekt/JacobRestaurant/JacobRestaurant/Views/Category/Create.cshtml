@model Category

    <div class="col-11 mx-auto pt-0 p-0">
        <div class="card">
            <div class="card-header bg-success text-uppercase text-white" style="height:45px;">
                <h4>Create new category</h4>
            </div>

            <form enctype="multipart/form-data" asp-controller="Category" asp-action="Create" method="post">
                <div >
                    <div class="col-md-6 text-left p-3">
                        <div class="form-group">
                            <label asp-for="@Model.Name">Name</label>
                            <input asp-for="@Model.Name" />
                            <span asp-validation-for="@Model.Name"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class=" col-6 form-group text-left p-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>